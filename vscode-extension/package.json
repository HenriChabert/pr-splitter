{
  "name": "pr-splitter",
  "displayName": "PR Splitter",
  "description": "Split large PRs into smaller, file-based PRs with drag-and-drop",
  "version": "0.0.1",
  "publisher": "pr-splitter",
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "main": "./dist/extension.js",
  "categories": [
    "SCM"
  ],
  "contributes": {
    "views": {
      "scm": [
        {
          "id": "prSplitterSourceView",
          "name": "PR Splitter"
        },
        {
          "id": "prSplitterGroupsView",
          "name": "PR Groups",
          "when": "pr-splitter.active"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "prSplitterSourceView",
        "contents": "Split your PR into smaller, reviewable pieces.\n[Start PR Split](command:pr-splitter.startSplit)",
        "when": "!pr-splitter.active"
      }
    ],
    "commands": [
      {
        "command": "pr-splitter.startSplit",
        "title": "Start PR Split",
        "category": "PR Splitter",
        "icon": "$(split-horizontal)"
      },
      {
        "command": "pr-splitter.cancelSplit",
        "title": "Cancel Split",
        "category": "PR Splitter",
        "icon": "$(close)"
      },
      {
        "command": "pr-splitter.executeSplit",
        "title": "Execute Split",
        "category": "PR Splitter",
        "icon": "$(play)"
      },
      {
        "command": "pr-splitter.dryRun",
        "title": "Dry Run",
        "category": "PR Splitter",
        "icon": "$(eye)"
      },
      {
        "command": "pr-splitter.renameGroup",
        "title": "Rename",
        "category": "PR Splitter",
        "icon": "$(edit)"
      },
      {
        "command": "pr-splitter.deleteGroup",
        "title": "Delete Group",
        "category": "PR Splitter",
        "icon": "$(trash)"
      },
      {
        "command": "pr-splitter.assignTo",
        "title": "Assign to PR...",
        "category": "PR Splitter",
        "icon": "$(move)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "pr-splitter.startSplit",
          "when": "view == prSplitterSourceView && !pr-splitter.active",
          "group": "navigation"
        },
        {
          "command": "pr-splitter.cancelSplit",
          "when": "view == prSplitterSourceView && pr-splitter.active",
          "group": "navigation"
        },
        {
          "command": "pr-splitter.dryRun",
          "when": "view == prSplitterGroupsView && pr-splitter.active",
          "group": "navigation"
        },
        {
          "command": "pr-splitter.executeSplit",
          "when": "view == prSplitterGroupsView && pr-splitter.active",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "pr-splitter.assignTo",
          "when": "view == prSplitterSourceView && viewItem =~ /^(file|folder)$/",
          "group": "inline"
        },
        {
          "command": "pr-splitter.assignTo",
          "when": "view == prSplitterGroupsView && viewItem =~ /^(file|folder)$/",
          "group": "inline"
        },
        {
          "command": "pr-splitter.renameGroup",
          "when": "view == prSplitterGroupsView && viewItem == group",
          "group": "inline"
        },
        {
          "command": "pr-splitter.deleteGroup",
          "when": "view == prSplitterGroupsView && viewItem == group",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "vitest run",
    "test:watch": "vitest",
    "package": "pnpm dlx @vscode/vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.18"
  }
}
